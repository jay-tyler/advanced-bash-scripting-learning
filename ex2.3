#!/bin/bash
# This script after http://tldp.org/LDP/abs/html/sha-bang.html; see there for more details

LOG_DIR=/var/log
ROOT_UID=0
LINES=50
E_XCD=86
E_NOTROOT=87

if [ "$UID" -ne "$ROOT_ID" ]
then
  echo "Must be root to run this script."
  exit $E_NOTROOT
fi

if [ -n "$1"]
then
  lines=$1
else
  lines=$LINES
fi

cd $LOG_DIR

if ['pws' != "$LOG_DIR"]
then
  echo "Can't change to $LOG_DIR."
  exit $E_XCD
fi

tail -n $lines messages > mesg.temp
mv mesg.temp messages

> wtmp
ehco "Log files cleaned up."

exit 0
